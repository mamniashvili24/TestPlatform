@model Test
@{
}

<div class="container">
    <h1>ტესტის დაწყება</h1>
    <hr />
    <h1 style="color: red">@Model.Error</h1>
    <hr />

    <form asp-action="StartTest" asp-controller="Test">
        <div class="form-group">
            <label for="name">@Model.Title</label>
            <input id="id" name="id" value="@Model.Id" hidden />
            <input type="text" class="form-control" id="personalNumber" name="personalNumber" placeholder="შეიყვანე პირადი ნომერი">
        </div>

        <button type="submit" class="btn btn-primary">დაწყება</button>
    </form>
    <!-- Any other content or elements you want to include -->
</div>